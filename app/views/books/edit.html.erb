<!--Book detailのEditボタンのリンク先記述-->

<div class="container">
  <dic class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <!--Title（本のタイトル記述箇所）作成-->
        <div class="form-group">
          <%= f.label :Title %>
          <%= f.text_field :title %>
        </div>
  <!--Opinion（本の感想記述箇所）作成-->
        <div class="form-group">
          <%= f.label :Opinion %>
          <%= f.text_area :body %>
        </div>
  <!--Update Bookボタン記述-->
        <div class="form-group">
          <%= f.submit 'Update Book' %>
        </div>
  <!--showボタンとBackボタン記述-->
        <%= link_to "Show", edit_book_path(@book) %> | <%= link_to "Back", edit_book_path(@book) %>
      <% end %>
    </div>
  </dic>
</div>


