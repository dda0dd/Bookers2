<!--ユーザ登録画面-->
<!--Sign upからのリンク先記述-->

<main>
  <p id="notice"></p>
<!--Bootstrapの枠組み-->
  <div class="container">
<!--Bootstrapの列-->
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
        <h2>Sign up</h2>
<!--form_forは現在は非推奨のためform_withへと変更-->
          <%= form_with model: @user, url: user_registration_path do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
<!--Nameの記述-->
          <div class="field">
            <%= f.label :name %><br>
            <%= f.text_field :name %>
          </div>
<!--Emailの記述-->
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
<!--Passwordの記述-->
          <div class="field">
            <% if @minimum_password_length %>
            <%= f.label :password %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
<!--Password confirmationの記述-->
          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
<!--Sign upボタンの記述-->
          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
<!--Log inボタンの記述-->
            <a href="/users/sign_in">Log in</a>
          <% end %><br />
      </div>
    </div>
  </div>
</main>
<% end %>
