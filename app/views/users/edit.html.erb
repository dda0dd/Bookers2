<!--ユーザー情報を編集する機能を作成-->

<!--メイン記述-->
  <main>
<!--form_withを挿入して、プロフィールを編集できるようにする-->
<%= form_with model: @user do |f| %>
<!--サクセスメッセージ記述-->
    <p id="notice">Welcome! You have signed up successfully.</p>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <h2>User info</h2>
          <img src="">
          <table class="table">
            <tbody>
              <th>name</th>
<!--自己紹介文-->
              <th>introduction</th>
            </tbody>
          </table>
          <div class="row">
<!--アイコン-->
          <i class="fa-solid fa-user-gear" href="/users/edit"></i>
          </div>
          <h2 class="mt-3">New book</h2>
            <input type="">
<!--フォーム部品を囲う部分-->
            <div class="form-group">
<!--本のタイトルの記述-->
              <label for="book_title">Title</label>
              <input class="form-control book_title" type="text" name="book[title]" id="book_title">
            </div>
            <div class="form-group">
<!--感想の記述-->
              <label for="book_opinion">Opinion</label>
              <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
            </div>
            <div class="form-group">
<!--Create Bookボタンの記述-->
              <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
            </div>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </thead>
          </table>
        </div>
      </div>
    </div>
  </main>
<% end %>
