<!--ユーザ一覧記述-->
<!--Usersのリンク先下の一覧-->
<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
<!--複数のデータを登録する記述-->
    <% @users.each  do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
      <td><%=user.name %></td>
<!--Showボタン-->
      <td><%= link_to "Show", users_path(@user) %></td>
    </tr>

    <% end %>
    </tbody>
  </table>
</div>